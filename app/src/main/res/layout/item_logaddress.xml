<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pad_height_60"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/pad_height_60"
        android:gravity="center"
        android:textColor="@color/jiujiujiu"
        android:textSize="@dimen/pad_text_size_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fangkuai"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_huodao"
            android:layout_width="0dp"
            android:layout_height="@dimen/pad_height_60"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tv_numberlog"
            android:layout_width="0dp"
            android:layout_height="@dimen/pad_height_60"
            android:layout_weight="1"
            android:gravity="center"
            android:text="6766666"
            android:textColor="#333333" />
    </LinearLayout>
</LinearLayout>
