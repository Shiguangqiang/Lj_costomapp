<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buhuoitemll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/buhuomessage_item_icon"
        android:layout_width="@dimen/pad_height_55"
        android:layout_height="@dimen/pad_height_55"
        android:layout_margin="@dimen/pad_height_15"
        android:background="@mipmap/tongzhiicon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/pad_height_10"
        android:gravity="center"
        android:layout_marginBottom="@dimen/pad_height_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buhuomessage_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/pad_height_8"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/pad_height_17" />

        <TextView
            android:id="@+id/buhuomessage_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_height_2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:focusable="true"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="@dimen/pad_height_15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/buhuomessage_item_newmessage"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_margin="@dimen/pad_height_10"
            android:background="@drawable/circle" />
    </LinearLayout>


</LinearLayout>
