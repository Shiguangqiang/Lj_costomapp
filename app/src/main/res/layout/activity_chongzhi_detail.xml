<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.statistics.ChongzhiDetailActivity">

    <include layout="@layout/include_title_img" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_height_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zxf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_height_18"
            android:layout_weight="1"
            android:textColor="@color/liuliuliu"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_zcz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_height_18"
            android:layout_weight="1"
            android:textColor="@color/liuliuliu"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_zxd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/liuliuliu"
            android:textSize="@dimen/pad_text_size_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_height_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zdk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_height_18"
            android:layout_weight="1"
            android:textColor="@color/liuliuliu"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_zdcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/liuliuliu"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/liuliuliu"
            android:textSize="@dimen/pad_text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_8"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/pad_text_size_16" />

        <TextView
            android:id="@+id/tv_xiaofei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/pad_text_size_16" />
    </LinearLayout>
    <com.defence.costomapp.utils.RefreshUtils.RefreshLayout
        android:id="@+id/srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_czhidetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </com.defence.costomapp.utils.RefreshUtils.RefreshLayout>

</LinearLayout>
