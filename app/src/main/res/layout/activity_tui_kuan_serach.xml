<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.statistics.TuiKuanSerachActivity">

    <include layout="@layout/include_title_img" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_100"
        android:layout_marginTop="@dimen/pad_height_50"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_leftdate"
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="@dimen/pad_height_35"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jiujiujiu"
                android:textSize="@dimen/pad_text_size_20" />

            <View
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/pad_height_3"
                android:background="@color/liuliuliu" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_height_3"
            android:layout_weight="0.3"
            android:text="至"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rightdate"
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="@dimen/pad_height_35"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jiujiujiu"
                android:textSize="@dimen/pad_text_size_20" />

            <View
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/pad_height_3"
                android:background="@color/liuliuliu" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liear_shoplist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left"
            android:text="选择查询的商品规格"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_18" />

        <ImageView
            android:layout_width="@dimen/pad_height_20"
            android:layout_height="@dimen/pad_height_20"
            android:src="@mipmap/right" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/liear_machicelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left"
            android:text="选择查询的机器列表"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_18" />

        <ImageView
            android:layout_width="@dimen/pad_height_20"
            android:layout_height="@dimen/pad_height_20"
            android:src="@mipmap/right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/liear_grouplist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="left"
            android:text="选择查询的组列表"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_18" />

        <ImageView
            android:layout_width="@dimen/pad_height_20"
            android:layout_height="@dimen/pad_height_20"
            android:src="@mipmap/right" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_startserach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/pad_height_50"
        android:layout_marginTop="@dimen/pad_height_100"
        android:gravity="center"
        android:text="开始查询"
        android:textColor="@color/bule_light"
        android:textSize="@dimen/pad_text_size_22" />

</LinearLayout>
