<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.MachineTjActivity">

    <include layout="@layout/include_title_img" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_100"
        android:layout_marginTop="@dimen/pad_height_50"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_leftdate"
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="@dimen/pad_height_35"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jiujiujiu"
                android:textSize="@dimen/pad_text_size_20" />

            <View
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/pad_height_3"
                android:background="@color/liuliuliu" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_height_3"
            android:layout_weight="0.3"
            android:text="至"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rightdate"
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="@dimen/pad_height_35"
                android:gravity="center"
                android:text=""
                android:textColor="@color/jiujiujiu"
                android:textSize="@dimen/pad_text_size_20" />

            <View
                android:layout_width="@dimen/pad_height_130"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/pad_height_3"
                android:background="@color/liuliuliu" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/pad_height_30"
        android:layout_marginTop="@dimen/pad_height_10"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="@dimen/pad_height_200"
            android:layout_height="@dimen/pad_height_35"
            android:gravity="center"
            android:text="省市区"
            android:textColor="@color/jiujiujiu"
            android:textSize="@dimen/pad_text_size_20" />

        <View
            android:layout_width="@dimen/pad_height_200"
            android:layout_height="1dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/pad_height_3"
            android:background="@color/liuliuliu" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_startserach"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_50"
        android:layout_margin="@dimen/pad_height_40"
        android:background="@drawable/btn_shape_submit"
        android:text="@string/startserach"
        android:textColor="@color/white"
        android:textSize="@dimen/pad_text_size_18" />

</LinearLayout>
