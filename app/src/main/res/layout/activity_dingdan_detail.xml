<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.statistics.DingdanDetailActivity">


    <include layout="@layout/include_title_img" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_15"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/pad_text_size_22"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_anum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_5"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/pad_text_size_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_180"
        android:layout_margin="@dimen/pad_height_8"
        android:background="@drawable/fangkuai">

        <com.amap.api.maps2d.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_height_3"
                android:layout_marginLeft="@dimen/pad_height_10"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/pad_text_size_16" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_height_3"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="@dimen/pad_text_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_3"
            android:layout_marginLeft="@dimen/pad_height_10"
            android:gravity="left"
            android:textSize="@dimen/pad_text_size_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_payval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_10"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/pad_text_size_22"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_anum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_5"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/pad_text_size_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_120">

        <LinearLayout
            android:id="@+id/liear_daichuhuo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_height_120"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_ignore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:text="忽略"
                android:textSize="@dimen/pad_text_size_22" />

            <TextView
                android:id="@+id/tv_tuikuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="退款"
                android:textSize="@dimen/pad_text_size_22" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liear_tuikuansucc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_height_120"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_timen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pad_height_10"
                android:textColor="@color/black"
                android:textSize="@dimen/pad_text_size_16"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/pad_text_size_16"
                android:gravity="center"
                android:text="处理时间" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
