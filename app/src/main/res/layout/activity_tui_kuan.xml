<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.defence.costomapp.activity.statistics.TuiKuanActivity">

    <include layout="@layout/include_title_img" />

    <android.support.design.widget.TabLayout
        android:id="@+id/manger_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/orange"
        app:tabIndicatorHeight="@dimen/pad_height_8" />

    <android.support.v4.view.ViewPager
        android:id="@+id/manger_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
