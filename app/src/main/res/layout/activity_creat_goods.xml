<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.statistics.CreatGoodsActivity">

    <include layout="@layout/include_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_100"
        android:gravity="center">

        <EditText
            android:id="@+id/et_customize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_height_50"
            android:layout_marginLeft="@dimen/pad_height_50"
            android:layout_marginRight="@dimen/pad_height_50"
            android:gravity="center"
            android:hint="输入你要创建的机器组名"
            android:textSize="@dimen/pad_text_size_16" />

    </LinearLayout>


    <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/rv_fund_good"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>