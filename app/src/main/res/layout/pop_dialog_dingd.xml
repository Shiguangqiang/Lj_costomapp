<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_jiaoyisucc"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:layout_margin="@dimen/pad_height_10"
            android:gravity="center"
            android:text="交易成功"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_daichuhuo"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/pad_height_10"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="待出货"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_tuikuan"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/pad_height_10"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="退款成功"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />
        <TextView
            android:id="@+id/tv_alllist"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/pad_height_10"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="全部订单"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/pad_height_10"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />



    </LinearLayout>

</LinearLayout>