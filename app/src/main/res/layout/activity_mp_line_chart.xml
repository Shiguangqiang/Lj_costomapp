<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.statistics.MpLineChartActivity">

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_selectionPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/pad_text_size_16"
                android:textStyle="bold|normal" />

            <com.github.mikephil.chartline.charts.LineChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_selectup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_35"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:text="筛选条件" />

            <TextView
                android:id="@+id/tv_machinename1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_num1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_machinename2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tv_num2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tv_selectdown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_35"
                android:background="#f4f4f4"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="筛选条件" />

            <TextView
                android:id="@+id/tv_machinename3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_num3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_machinename4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center"
                android:singleLine="true" />


            <TextView
                android:id="@+id/tv_num4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pad_height_38"
                android:gravity="center"
                android:textColor="@color/blue" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="设 置"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>