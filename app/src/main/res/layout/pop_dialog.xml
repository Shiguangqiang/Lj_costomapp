<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_logintime"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:layout_margin="@dimen/pad_height_10"
            android:gravity="center"
            android:text="登录时间"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_yue"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="@dimen/pad_height_10"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="账户余额"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_reg_time"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/pad_height_10"
            android:drawableTop="@mipmap/ic_launcher"
            android:text="注册时间"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_120"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_weixinpay"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/pad_height_10"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="微信付款"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_shouwang_history"
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:layout_margin="@dimen/pad_height_10"
            android:text="守望充值记录"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:layout_width="@dimen/pad_height_100"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/pad_height_10"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />


    </LinearLayout>

</LinearLayout>