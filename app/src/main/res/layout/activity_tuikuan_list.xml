<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.statistics.TuikuanListActivity">

    <include layout="@layout/include_title_img" />

    <FrameLayout
        android:id="@+id/fl_tk"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/liear_tk1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_height_15"
            android:layout_marginTop="@dimen/pad_height_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tuikuanSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_height_10"
                android:layout_weight="1"
                android:gravity="left"
                android:text="" />

            <TextView
                android:id="@+id/tuikuandingdanshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="" />

            <TextView
                android:id="@+id/tuikuanchengben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liear_tk2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_height_15"
            android:layout_marginTop="@dimen/pad_height_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/daichuhuoSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pad_height_10"
                android:layout_weight="1"
                android:gravity="left"
                android:text="" />

            <TextView
                android:id="@+id/daichuhuodingdanshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="" />

            <TextView
                android:id="@+id/daichuhuochengben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="" />

        </LinearLayout>

        <com.defence.costomapp.utils.RefreshUtils.RefreshLayout
            android:id="@+id/srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_tuikuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>


        </com.defence.costomapp.utils.RefreshUtils.RefreshLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_refundMoney"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            app:backgroundTint="@color/F4"
            app:backgroundTintMode="multiply"
            app:borderWidth="0dp"
            app:elevation="@dimen/activity_horizontal_margin"
            android:visibility="gone"
            app:fabSize="auto"
            app:pressedTranslationZ="@dimen/activity_horizontal_margin"
            app:rippleColor="@color/F4"
            app:srcCompat="@mipmap/refundmoney"
            app:useCompatPadding="true" />
    </FrameLayout>
</LinearLayout>
