<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f4f4"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.LoginActivity">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:id="@+id/buhuoitemll"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buhuomessage_item_icon"
            android:layout_width="@dimen/pad_height_55"
            android:layout_height="@dimen/pad_height_55"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/tongzhiicon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/pad_height_10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/pad_height_10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/worklog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_height_8"
                android:layout_weight="1"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/pad_height_17" />

            <TextView
                android:id="@+id/worklog_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pad_height_2"
                android:layout_weight="1"
                android:ellipsize="end"
                android:focusable="true"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/pad_height_15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/liear_call"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/pad_height_80"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_red"
                android:gravity="center"
                android:text="@string/callTa"
                android:textColor="@color/white"
                android:textSize="@dimen/pad_height_15" />

        </LinearLayout>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/exlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/fangkuai"
        android:groupIndicator="@null" />


</LinearLayout>


