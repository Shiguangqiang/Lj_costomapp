<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.ExceptionAlarmActivity">

    <include layout="@layout/include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@drawable/fangkuai"
        android:orientation="vertical">

        <TextView
            android:id="@+id/machineAddr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_height_40"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad_height_8"
            android:background="@drawable/fangkuai">

            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_10"
            android:gravity="center"
            android:text="@string/alarm"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_22" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fangkuai"
            android:padding="10dp"

            android:text="@string/alarmnot"
            android:textSize="@dimen/pad_text_size_18" />

        <ListView
            android:id="@+id/liear_alarmnot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@null"
            android:dividerHeight="@dimen/pad_height_8"
            android:layout_weight="0.5"></ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fangkuai"
            android:padding="7dp"
            android:text="@string/alarmyet"
            android:textSize="@dimen/pad_text_size_18" />

        <ListView
            android:id="@+id/liear_alarmyet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@null"
            android:dividerHeight="@dimen/pad_height_8"
            android:layout_weight="0.5"></ListView>


    </LinearLayout>

</LinearLayout>
