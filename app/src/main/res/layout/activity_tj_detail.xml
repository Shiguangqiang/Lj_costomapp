<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.statistics.MachineSerachActivity">

    <include layout="@layout/include_title_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_height_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sumJinE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="总额:0元" />

        <TextView
            android:id="@+id/paysalecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="付款商品:0个" />

        <TextView
            android:id="@+id/freesalecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="赠送商品:0个" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_height_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/freecost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="赠送成本:0元" />

        <TextView
            android:id="@+id/lirun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="净利润:0元" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/pad_height_10"
        android:layout_marginTop="@dimen/pad_height_10"
        android:background="@color/liuliuliu" />

    <android.support.design.widget.TabLayout
        android:id="@+id/manger_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/orange"
        app:tabIndicatorHeight="@dimen/pad_height_8" />

    <android.support.v4.view.ViewPager
        android:id="@+id/manger_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/pad_height_20"
        android:layout_marginRight="@dimen/pad_height_20"
        android:layout_marginTop="@dimen/pad_height_5"
        android:background="@color/jiujiujiu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_height_50"
        android:layout_marginLeft="@dimen/pad_height_20"
        android:layout_marginRight="@dimen/pad_height_20"
        android:layout_marginTop="@dimen/pad_height_5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_switchtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_height_16"
            android:background="@drawable/shape_rectangle_white"
            android:gravity="center"
            android:padding="@dimen/pad_height_5"
            android:text="全部机器查询"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_beforeday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rectangle_white"
            android:gravity="center"
            android:padding="@dimen/pad_height_5"
            android:text="前一天"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

        <TextView
            android:id="@+id/tv_afterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_height_16"
            android:background="@drawable/shape_rectangle_white"
            android:gravity="center"
            android:padding="@dimen/pad_height_5"
            android:text="后一天"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_14" />

    </LinearLayout>


</LinearLayout>
