<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F4"
    android:orientation="vertical"
    tools:context="com.defence.costomapp.activity.statistics.DailyCostActivity">

    <include layout="@layout/include_title_img" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad_height_20"
        android:gravity="right"
        android:text="03-19 星期一"
        android:textColor="@color/black"
        android:textSize="@dimen/pad_text_size_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="付款个数:"
            android:textSize="@dimen/pad_text_size_18" />

        <TextView
            android:id="@+id/tv_paycount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0个"
            android:textSize="@dimen/pad_text_size_18" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="赠送个数:"
            android:textSize="@dimen/pad_text_size_18" />

        <TextView
            android:id="@+id/tv_sendcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0个"
            android:textSize="@dimen/pad_text_size_18" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="销售额:"
            android:textSize="@dimen/pad_text_size_18" />

        <TextView
            android:id="@+id/tv_xiaose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0元"
            android:textSize="@dimen/pad_text_size_18" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="0元购成本:"
            android:textSize="@dimen/pad_text_size_18" />

        <TextView
            android:id="@+id/tv_zerocb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0元"
            android:textSize="@dimen/pad_text_size_18" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="返现总额:"
            android:textSize="@dimen/pad_text_size_18" />

        <TextView
            android:id="@+id/tv_fanxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0元"
            android:textSize="@dimen/pad_text_size_18" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="left"
            android:text="返现后净利润:"
            android:textSize="@dimen/pad_text_size_18" />

        <TextView
            android:id="@+id/tv_lirun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_15"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0元"
            android:textSize="@dimen/pad_text_size_18" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lastday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_20"
            android:layout_marginLeft="@dimen/pad_height_20"
            android:layout_weight="1"
            android:gravity="left"
            android:text="前一天"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_20" />

        <TextView
            android:id="@+id/tv_nextday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad_height_20"
            android:layout_marginRight="@dimen/pad_height_20"
            android:layout_weight="1"
            android:gravity="right"
            android:text="后一天"
            android:textColor="@color/black"
            android:textSize="@dimen/pad_text_size_20" />

    </LinearLayout>


</LinearLayout>
