<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 填充的颜色 -->
    <solid android:color="@color/white" />
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

    <!-- 设置矩形的四个角为弧形 -->
    <corners android:radius="10dip" />
    <stroke
        android:width="1dip"
        android:color="#f2f2f2" />
</shape>